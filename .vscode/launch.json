    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${movie_api}/server.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal"
        },

        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http:// :5500",
            "webRoot": "${movie_api}"
        }
    ]
}